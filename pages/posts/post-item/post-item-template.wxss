swiper{
  width:750rpx;
  height:600rpx;
}
swiper image{
  width: 100%;
  height: 100%;
}

.post-container{
  display:flex;
  flex-direction: column;
  margin:  20px 15px;
  border-radius: 5px;
  background-color: white;
  border-bottom: 1px solid #ededed;
  border-top :1px solid #ededed;
  padding: 20px 0;
  box-shadow:0 0 3px 0 #ccc;
}

.post-author-date{
  margin:0rpx 0 20rpx 10rpx;
}
.post-author{
  width: 60rpx;
  height:60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  margin-bottom: 5px;
  vertical-align: middle;
  font-size: 26rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color:#333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post-image{
  width:100%;
  margin: 16px auto ;
}
.post-content{
  font-size: 28rpx;
  color:#666;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
  margin-left:20rpx;
}
.post-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-like-image{
  height:16px;
  width:16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-content{
  vertical-align: middle;
  margin-right: 20px;
}